                    <input type="text" id="ex3" name="product" required class="form-control">
                    </div>        
                               
                <div class="col-x2-2">
                    <label for="quantity">Quantity</label>            
                    <input type="number" name="quantity" required class="form-control" min="1" >
                    </div>
                    </div>                       
                    <button class="btn btn-primary" type="submit">Submit</button>            
                  </form>
            </div>         

        </div>
</div>  
            

